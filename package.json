{
  "name": "@rao123dk/random-username-generator",
  "version": "1.0.0",
  "description": "A utility to generate a unique/distinctive username using either an email address, randomly picked nouns and adjectives, or country-based names. Users have the option to insert a separator in the username, set the maximum length, and include up to six random digits.",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --config ./jest.config.js",
    "coverage": "jest --config ./jest.config.js --coverage",
    "lint": "eslint --fix src",
    "format": "npx prettier . --write",
    "commit": "git cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rao123dk/random-username-generator.git"
  },
  "keywords": [
    "generate",
    "username",
    "username-from-email"
  ],
  "author": "Dheeraj Kumar Rao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rao123dk/random-username-generator/issues"
  },
  "homepage": "https://github.com/rao123dk/random-username-generator#readme",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "git-cz": "^4.9.0",
    "globals": "^15.2.0",
    "jest": "^29.7.0"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
